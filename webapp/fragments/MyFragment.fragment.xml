<core:FragmentDefinition xmlns:form="sap.ui.layout.form" 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core">
    <Dialog>
        <VBox>
            <!-- Input enlazado al valor 'name' del modelo global, usando el formatter 'formatName' para formatear el texto mostrado -->
            <Input value="{ path: 'globalModel>/name', formatter: '.formatter.formatName' }" width="50%"/>
        </VBox>        
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="{i18n>cancelar}" type="Reject" press=".onEditFragment"/>
                <Button text="{i18n>save}" type="Emphasized" press=".onEditFragment"/>
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>