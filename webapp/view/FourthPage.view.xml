<mvc:View controllerName="clase3.controller.FourthPage"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
    height="100%">
    <Page>
        <content>
            <VBox class="sapUiSmallMargin">
                <Title id="fourthPageTitle" 
                    level="H1" 
                    titleStyle="H1"/>
                <Text text="{localModel>/value}" />
                <Text text="{localModel>/name}" />
                <Text text="{localModel>/lastName}"/>
            </VBox>
           <VBox class="sapUiSmallMargin">
                <!-- TÃ­tulo secundario con id "fourthPageTitleGlobal" y estilo H2 -->
                <Title id="fourthPageTitleGlobal" 
                    level="H2" 
                    titleStyle="H2"/>
                <!-- Texto que muestra el valor "value" del modelo global -->
                <Text text="{globalModel>/value}" />
                <!-- Texto que muestra el valor "name" del modelo global -->
                <Text text="{globalModel>/name}" />
                <!-- Texto que muestra el valor "lastName" del modelo global -->
                <Text text="{globalModel>/lastName}" />
            </VBox>
        </content>
    </Page>
</mvc:View>
