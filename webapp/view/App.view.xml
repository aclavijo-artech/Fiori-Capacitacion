<mvc:View controllerName="clase3.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
    height="100%">

	<App id="app">
		<pages>
			<Page title="App">
				<content>
					<VBox class="sapUiSmallMargin">
						<Text text="{i18n>hello}" />
					</VBox>
					<!-- Contenedor vertical con margen pequeño -->
					<VBox class="sapUiSmallMargin">
						<!-- Botón que navega a la segunda página al hacer clic -->
						<Button text="{i18n>toSecondPage}" press=".onToSecondPage" />
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>
