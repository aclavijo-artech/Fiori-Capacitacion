<mvc:View controllerName="tpcurso.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <App id="app">
    <Page id="page" title="{i18n>title}">
        <VBox alignItems="Center">
           <HBox>
              <Label text="Pedido (EBELN)" labelFor="idEbeln"/>
              <Input id="idEbeln" width="200px" placeholder="Ej: 4500000010"/>
              <Label text="Fecha de creaciÃ³n del registro" labelFor="idAedat" class="sapUiSmallMarginBegin"/>
              <DatePicker width="200px"
                        id="idAedat"
                        valueFormat="yyyy/MM/dd"
                        displayFormat="dd/MM/yyyy"
                        placeholder="Selecciona una fecha"
                        required="true"
                        change="_onDateChange"
                        />
              <Label text="Proveedor" labelFor="idLifnr"/>
              <Input id="idLifnr" width="200px" placeholder="Ej: 17300002"/>
              <Button text="Buscar" press="onSearch(1)" class="sapUiSmallMarginBegin"/>
            </HBox>
        <!-- Tabla -->
            <Table id="idTable" class="sapUiSmallMarginTop" items="{local>/results}">
            <!-- <Table id="idTable" class="sapUiSmallMarginTop"> -->
            <columns>
                <Column><Text text="{i18n>Pedido}"/></Column>
                <Column><Text text="{i18n>Posicion}"/></Column>
                <Column><Text text="{i18n>Sociedad}"/></Column>
                <Column><Text text="{i18n>DocCompra}"/></Column>
                <Column><Text text="{i18n>FechaReg}"/></Column>
                <Column><Text text="{i18n>Proveedor}"/></Column>
                <Column><Text text="{i18n>Material}"/></Column>
                <Column><Text text="{i18n>Cantidad}"/></Column>
                <Column><Text text="{i18n>UM}"/></Column>
                <Column><Text text="{i18n>Importe}"/></Column>
                <Column><Text text="{i18n>Total}"/></Column>
                <Column><Text text="{i18n>Moneda}"/></Column>
            </columns>
            <items>
                <ColumnListItem>
                <cells>
                    <Text text="{local>EBELN}"/>
                    <Text text="{local>EBELP}"/>
                    <Text text="{local>BUKRS}"/>
                    <Text text="{local>BSART}"/>
                    <Text text="{local>AEDAT}"/>
                    <Text text="{local>LIFNR}"/>
                    <Text text="{local>MATNR}"/>
                    <Text text="{local>MENGE}"/>
                    <Text text="{local>MEINS}"/>
                    <Text text="{local>NETPR}"/>
                    <Text text="{local>TOTAL}"/>
                    <Text text="{local>WAERS}"/>
                </cells>
                </ColumnListItem>
            </items>
            </Table>
            <HBox justifyContent="Center" class="sapUiSmallMarginTop">
                <Button text="Anterior" press=".onPrevPage" />
                <Text id="pageText" text="{local>/iPage}" class="sapUiSmallMarginBegin sapUiSmallMarginEnd"/>
                <Button id="idSig" text="Siguiente" press=".onNextPage"  enabled="{= ${local>/results}.length !== 0 }"/>
            </HBox>
        </VBox>
    </Page>
    </App>
</mvc:View>