<mvc:View controllerName="tpcurso.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <App id="app">
    <Page id="page" title="{i18n>title}">
        <VBox alignItems="Center">
           <HBox>
              <Label text="Pedido (EBELN)" labelFor="idEbeln"/>
              <Input id="idEbeln" width="200px" placeholder="Ej: 4500000010"/>
              <Label text="Fecha de creaciÃ³n del registro" labelFor="idAedat" class="sapUiSmallMarginBegin"/>
              <Input id="idAedat" width="200px" placeholder="Ej: 22.12.2015"/>
              <Label text="Proveedor" labelFor="idLifnr"/>
              <Input id="idLifnr" width="200px" placeholder="Ej: 17300002"/>
              <Button text="Buscar" press="onSearch" class="sapUiSmallMarginBegin"/>
            </HBox>
        <!-- Tabla -->
            <Table id="idTable" class="sapUiSmallMarginTop">
            <columns>
                <Column><Text text="Pedido"/></Column>
                <Column><Text text="Org. Compras"/></Column>
                <Column><Text text="Proveedor"/></Column>
                <Column><Text text="Fecha Doc." /></Column>
            </columns>
            <items>
                <ColumnListItem>
                <cells>
                    <Text text="{EBELN}"/>
                    <Text text="{EKORG}"/>
                    <Text text="{LIFNR}"/>
                    <Text text="{BEDAT}"/>
                </cells>
                </ColumnListItem>
            </items>
            </Table>
        </VBox>
    </Page>
    </App>
</mvc:View>