<mvc:View controllerName="ejercicio2.controller.Training"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <!-- Página sin encabezado, con clase personalizada para aplicar estilos -->
    <Page showHeader="false" class="pageContainer">
        
        <!-- Panel que actúa como contenedor visual -->
        <Panel headerText="{i18n>training} | {i18n>tileContentMembers}" 
            expandable="false" 
            class="sapUiResponsiveMargin">
            
            <!-- Contenedor VBox donde se incrustará el iframe desde el controlador -->
            <VBox id="trainingIframe" />
        </Panel>
    </Page>
</mvc:View>