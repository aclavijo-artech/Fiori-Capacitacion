                        </Record>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Value" Path="NETPR" />
                            <PropertyValue Property="Label" String="{@i18n>price}" />
                        </Record>

                        <Record Type="UI.DataField">
                            <PropertyValue Property="Value" Path="TOTAL" />
                            <PropertyValue Property="Label" String="{@i18n>total}" />
                            <PropertyValue Property="Criticality" />
                        </Record>
                    </Collection>
                </Annotation>

                <!-- Filtros de selecciÃ³n -->
                <Annotation Term="UI.SelectionFields">
                    <Collection>
                        <PropertyPath>EBELN</PropertyPath>
                        <PropertyPath>AEDAT</PropertyPath>
                        <PropertyPath>LIFNR</PropertyPath>
                    </Collection>
                </Annotation>
