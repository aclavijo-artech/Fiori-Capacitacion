                        </Record>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Value" Path="BSART" />
                            <PropertyValue Property="Label" String="{@i18n>ordertype}" />
                        </Record>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Value" Path="AEDAT" />                            
                            <PropertyValue Property="Label" String="{@i18n>creationdate}" />
                        </Record>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Value" Path="LIFNR" />
                            <PropertyValue Property="Label" String="{@i18n>supplier}" />
                        </Record>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Value" Path="MATNR" />
                            <PropertyValue Property="Label" String="{@i18n>material}" />
                        </Record>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Value" Path="MENGE" />
                            <PropertyValue Property="Label" String="{@i18n>quantity}" />
                        </Record>
                        <Record Type="UI.DataField">
                            <PropertyValue Property="Value" Path="MEINS" />
