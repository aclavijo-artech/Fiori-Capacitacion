            <Annotations Target="Z_TRABAJOFINAL_FIORI_SRV.ordenesdecompra/TOTAL">
                <Annotation Term="Measures.ISOCurrency" Path="WAERS" />
            </Annotations>

            <Annotations Target="Z_TRABAJOFINAL_FIORI_SRV.ordenesdecompra/MENGE">
                <Annotation Term="Org.OData.Measures.V1.Unit" Path="MEINS" />
